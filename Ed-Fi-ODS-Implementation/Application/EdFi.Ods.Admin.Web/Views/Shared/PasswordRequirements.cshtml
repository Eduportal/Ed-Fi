@using EdFi.Ods.Admin.Extensions
@{
    var allowedSymbols = PasswordExtensions.AllowedSymbols.Replace(",", " , ");
}

<div class="row">
    <div class="well">
        <p>Passwords should meet the following minimum requirements</p>
        <ul>
            <li>At least 8 characters</li>
            <li>At least 1 lower case letter (a-z)</li>
            <li>At least 1 upper case letter (A-Z)</li>
            <li>At least 1 number (0-9)</li>
            <li>At least 1 symbol from (@allowedSymbols)</li>
        </ul>
    </div>
</div>