@using System.Web.Mvc.Html
@model EdFi.Ods.Admin.Models.Home.IndexViewModel
@{
    ViewBag.Title = "Sandbox Administration Portal";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@if(Model.UserShouldLogin){
<h2>Sandbox Admin</h2>
    <p>Click "Login" to either log into your current account or create a new account.</p>
}
@if (Model.UserIsAdmin)
{
    RenderPartialExtensions.RenderPartial(Html, "ResetSandbox", Model);
}